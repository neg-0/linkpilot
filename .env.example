# =============================================================================
# LinkPilot Environment Variables
# =============================================================================

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# Embeddings (choose one provider)
# =============================================================================

# Provider: 'gemini' (default) or 'openai'
EMBEDDING_PROVIDER=gemini

# Gemini API Key (default provider - uses GCP credits)
GEMINI_API_KEY=your-gemini-api-key

# OpenAI API Key (if using OpenAI embeddings)
OPENAI_API_KEY=sk-xxx

# =============================================================================
# Stripe (for payments)
# =============================================================================

# Your secret key from Stripe (sk_test_... or sk_live_...)
STRIPE_SECRET_KEY=sk_test_xxx

# Your publishable key from Stripe (pk_test_... or pk_live_...)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# Webhook signing secret (whsec_...)
STRIPE_WEBHOOK_SECRET=whsec_xxx

# =============================================================================
# Analytics & Error Tracking (optional)
# =============================================================================

# Plausible Analytics domain
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=linkpilot.io

# Sentry DSN for error tracking
NEXT_PUBLIC_SENTRY_DSN=https://xxx@sentry.io/xxx

# =============================================================================
# Database (optional - for user accounts)
# =============================================================================

DATABASE_URL=postgresql://...
